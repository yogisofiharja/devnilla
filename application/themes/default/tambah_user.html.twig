{% extends '_layouts/admin_base.html.twig' %}
{% block content %}
<div>
            <hr>
            <ul class="breadcrumb">
                    <li>
                            <a href="{{ base_url() }}admin">Home</a> <span class="divider">/</span>
                    </li>
                    <li>
                            <a href="{{ base_url() }}admin/get/user">Users</a>
                    </li>
            </ul>
            <hr>
    </div>


<div class="row-fluid sortable">
        <div class="box span12">
                <div class="box-header" data-original-title>
                        <h2><i class="icon-edit"></i><span class="break"></span>Add a New User</h2>                        
                </div>
                <div class="box-content">
                        <form class="form-horizontal" action="{{ base_url()}}admin/post/tambah_user" method="POST">
                          <fieldset>
                                <div class="control-group">
                                  <label class="control-label" for="focusedInput">Username</label>
                                    <div class="controls">
                                      <input class="input-xlarge focused" name="username" type="text" value="{{ user.username }}">
                                      <input type="hidden" name="id_user" >
                                    </div>
                                </div>
				<div class="control-group">
                                  <label class="control-label" for="focusedInput">Password</label>
                                    <div class="controls">
                                      <input class="input-xlarge focused" name="password" type="password" >
                                      <input type="hidden" name="id_user" >
                                    </div>
                                </div>
				<div class="control-group">
                                  <label class="control-label" for="focusedInput">Re-type Password</label>
                                    <div class="controls">
                                      <input class="input-xlarge focused" name="password2" type="password" >
                                      <input type="hidden" name="id_user" >
                                    </div>
                                </div>
                                <div class="control-group">
                                  <label class="control-label" for="focusedInput">Email</label>
                                    <div class="controls">
                                      <input class="input-xlarge focused" name="email" type="text"  >
                                    </div>
                                </div>
                                <div class="control-group">
                                  <label class="control-label" for="focusedInput">Full Name</label>
                                    <div class="controls">
                                      <input class="input-xlarge focused" name="full_name" type="text" >
                                    </div>
                                </div>
                                <div class="form-actions">
                                  <button type="submit" class="btn btn-primary">Save changes</button>
                                  <a class="btn" href="{{base_url()}}admin/get/user/">Cancel</a>
                                </div>
                          </fieldset>
                        </form>   
			<hr>
				{% if stat == 'error' %}
					    <div class="box-content alerts">
					    <div class="alert alert-error">
							<button type="button" class="close" data-dismiss="alert">×</button>
							<strong>Gagal</strong><br/>Pastikan Password Sama
					    </div>
					    </div>
				{% endif %}
                </div>
        </div><!--/span-->

</div><!--/row-->

			
{% endblock %}