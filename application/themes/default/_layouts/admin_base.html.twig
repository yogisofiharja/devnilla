	  <script type="text/javascript">
	  $(document).ready(function(){
	  	$('#send').click(function(e){
	  		e.preventDefault();
	  		if($("#subject").val()==""){
	  			$("#subject").focus();
	  		}else if($("#pesan").val()==""){
	  			alert("clicked");
	  			$("#pesan").focus();
	  		}else{
	  			var id_contact = $("#id_contact").val();
	  			var subject = $("#subject").val();
	  			var pesan = $("#pesan").val();
	  			$.post("{{base_url()}}admin/post/reply",{
	  				id_contact:id_contact,
	  				subject:subject,
	  				pesan:pesan
	  			}, function(result){
	  				$("#subject").val("");
	  				$("#pesan").val("");
	  				$("#send").after("<div style=\"width:45%;\"class=\"alert alert-success\">"+
	  					"<a class=\"close\" data-dismiss=\"alert\" href=\"#\">Ã—</a>"+
	  					"<h4 class=\"alert-heading\">Success</h4>"+
	  					"Your message has been sent:)"+
	  				"</div>");
	  				setTimeout(function() {
	  					$( ".alert" ).fadeOut(600);
	  				}, 3000);
	  			},"json");
	  		}
	  	});
	  });
	  </script>


