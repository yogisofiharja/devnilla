{% extends '_layouts/admin_base.html.twig' %}
{% block content %}
<div>
            <hr>
            <ul class="breadcrumb">
                    <li>
                            <a href="{{ base_url() }}admin">Home</a> <span class="divider">/</span>
                    </li>
                    <li>
                            <a href="{{ base_url() }}admin/get/user">Users</a>
                    </li>
            </ul>
            <hr>
    </div>

<div class="row-fluid sortable">
        <div class="box span12">
                <div class="box-header" data-original-title>
                        <h2><i class="icon-edit"></i><span class="break"></span>Update User</h2>                        
                </div>
                <div class="box-content">
                        <form class="form-horizontal" action="{{ base_url()}}admin/post/update_user" method="POST">
                          <fieldset>
                                <div class="control-group">
                                  <label class="control-label" for="focusedInput">Username</label>
                                    <div class="controls">
                                      <input class="input-xlarge focused" id="username" name="username" type="text" value="{{ user.username }}">
                                      
                                    </div>
                                </div>
                                <div class="control-group">
                                  <label class="control-label" for="focusedInput">Email</label>
                                    <div class="controls">
                                      <input class="input-xlarge focused" id="email" name="email" type="text" value="{{ user.email }}">
                                    </div>
                                </div>
                                <div class="control-group">
                                  <label class="control-label" for="focusedInput">Full Name</label>
                                    <div class="controls">
                                      <input class="input-xlarge focused" id="full_name" name="full_name" type="text" value="{{ user.full_name }}">
                                    </div>
                                </div>
                                <div class="form-actions">
                                  <button type="submit" class="btn btn-primary">Save changes</button>
                                  <button type="reset" class="btn">Cancel</button>
                                </div>
                          </fieldset>
                        </form>   

                </div>
        </div><!--/span-->

</div><!--/row-->

			
{% endblock %}