{% extends '_layouts/admin_base.html.twig' %}
{% block content %}
<div>
            <hr>
            <ul class="breadcrumb">
                    <li>
                            <a href="{{ base_url() }}admin">Home</a> <span class="divider">/</span>
                    </li>
                    <li>
                            <a href="{{ base_url() }}admin/get/page">Page</a><span class="divider">/</span>
                    </li>
					 <li>
                            <a href="">Edit Page</a>
                    </li>
            </ul>
            <hr>
    </div>

<div class="row-fluid sortable">
        <div class="box span12">
                <div class="box-header" data-original-title>
                        <h2><i class="icon-edit"></i><span class="break"></span>Update Category</h2>                        
                </div>
                <div class="box-content">
                        <form class="form-horizontal" action="{{ base_url()}}admin/post/update_page" method="POST">
                          <fieldset>
                                <div class="control-group">
                                  <label class="control-label" for="focusedInput">Section</label>
                                    <div class="controls">
                                      <input class="input-xlarge focused" name="section" type="text" value="{{ page.section }}">
                                      <input type="hidden" name="id_page" value="{{ page.id_page}}">
                                    </div>
                                </div>
								<div class="control-group">
                                  <label class="control-label" for="focusedInput">Title</label>
                                    <div class="controls">
                                      <input class="input-xlarge focused" name="title" type="text" value="{{ page.title }}">
                                    </div>
                                </div>
                                <div class="control-group">
									<label class="control-label" for="textarea2">Description</label>
									<div class="controls">
										<textarea class="cleditor" id="description" name="description" rows="4" >{{ page.description}}</textarea>
									</div>				  
                                </div>
								 <div class="control-group">
									<label class="control-label" for="textarea2">Content</label>
									<div class="controls">
										<textarea class="cleditor" id="content" name="content" rows="4" >{{ page.content}}</textarea>
									</div>				  
                                </div>
                                <div class="form-actions">
                                  <button type="submit" class="btn btn-primary">Save changes</button>
                                  <a class="btn" href="{{base_url()}}admin/get/page/">Cancel</a>
                                </div>
                          </fieldset>
                        </form>   

                </div>
        </div><!--/span-->

</div><!--/row-->

			
{% endblock %}