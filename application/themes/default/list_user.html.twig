{% extends '_layouts/admin_base.html.twig' %}

{% block content %}

    <div>
            <hr>
            <ul class="breadcrumb">
                    <li>
                            <a href="{{ base_url() }}admin">Home</a> <span class="divider">/</span>
                    </li>
                    <li>
                            <a href="{{ base_url() }}admin/get/user">Users</a>
                    </li>
            </ul>
            <hr>
    </div>
    <div>	
		<a  class="btn btn-primary" href="{{ base_url()}}admin/get/tambah_user">Add a New User</a>
                <hr>
    </div>
    
    <div class="row-fluid sortable">		
            <div class="box span12">
                    <div class="box-header" data-original-title>
                            <h2><i class="icon-user"></i><span class="break"></span>List Of Users</h2>                            
                    </div>
                    <div class="box-content">
                            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                              <thead>
                                      <tr>
                                              <th>Username</th>
                                              <th>Name</th>
                                              <th>Email</th>
                                              <th>Actions</th>
                                      </tr>
                              </thead>   
                              <tbody>
                                    {% for luser in daftar_user %}
                                    <tr>
                                            <td>{{ luser.username}}</td>
                                            <td>{{ luser.full_name }}</td>                                            
                                            <td>{{ luser.email}}</td>
                                            <td class="center">
                                                    
                                                    <a class="btn btn-info" title="Edit this user" href="{{base_url()}}admin/get/update_user/{{luser.id_user}}">
                                                            <i class="icon-edit icon-white"></i>  
                                                    </a>
                                                    <a class="btn btn-danger" title="Delete this user" href="{{base_url()}}admin/get/delete_user/{{luser.id_user}}">
                                                            <i class="icon-trash icon-white"></i> 
                                                    </a>
                                            </td>
                                    </tr>
                                    {% endfor %}
                              </tbody>
                      </table>            
                    </div>
            </div><!--/span-->    
    </div><!--/row-->

<hr>	

{% endblock %}