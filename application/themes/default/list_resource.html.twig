{% extends '_layouts/admin_base.html.twig' %}

{% block content %}

    <div>
            <hr>
            <ul class="breadcrumb">
                    <li>
                            <a href="{{ base_url() }}admin">Home</a> <span class="divider">/</span>
                    </li>
                    <li>
                            <a href="{{ base_url() }}admin/get/resource">Resource</a>
                    </li>
            </ul>
            <hr>
    </div>
    <div>	
		<a  class="btn btn-primary" href="{{ base_url()}}admin/get/tambah_resource">Add a New Resource</a>
                <hr>
    </div>
    
    <div class="row-fluid sortable">		
            <div class="box span12">
                    <div class="box-header" data-original-title>
                            <h2><i class="icon-user"></i><span class="break"></span>List Of Resource</h2>                            
                    </div>
                    <div class="box-content">
                            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                              <thead>
                                      <tr>
                                              <th>Title</th>
                                              <th>Description</th>
                                              <th>Type</th>
					      <th>Action</th>
                                      </tr>
                              </thead>   
                              <tbody>
                                    {% for resource in list_resource %}
                                    <tr>
                                            <td><a href="{{ base_url() }}{{resource.file_location }}">{{ resource.title}}</a></td>
                                            <td>{{ resource.description}}</td>
					    {% if resource.type == 1 %}
						<td>Image</td>
					    {% else %}
						<td>File</td>
					    {% endif %}
					    
                                            <td class="center">
                                                    
                                                    <a class="btn btn-info" title="Edit this user" href="{{base_url()}}admin/get/update_resource/{{resource.id_resource}}">
                                                            <i class="icon-edit icon-white"></i>  
                                                    </a>
                                                    <a class="btn btn-danger" title="Delete this user" href="{{base_url()}}admin/get/delete_resource/{{resource.id_resource}}">
                                                            <i class="icon-trash icon-white"></i> 
                                                    </a>
                                            </td>
                                    </tr>
                                    {% endfor %}
                              </tbody>
                      </table>            
                    </div>
            </div><!--/span-->    
    </div><!--/row-->

<hr>	

{% endblock %}