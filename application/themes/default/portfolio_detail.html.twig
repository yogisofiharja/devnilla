{% extends '_layouts/front.html.twig' %}
{% block content %}
<div class="align">
    <i class="icon-desktop-circled"></i>
</div>
<h1 id="folio-headline">Portfolio</h1>
<!-- bikin looping buat post post yang ada -->
<div class="row">

<div class="span12">
    <div class="mask2"> <a href="{{ base_url(posts.thumbnail) }}" rel="prettyPhoto"><img src="{{ base_url(posts.thumbnail) }}" alt=""></a> </div>
    <div class="inside">
        <hgroup>
            <h2>{{ posts.title}}</h2>
            <h4>Diterbitkan Tanggal : {{ posts.date_post}}</h4>
        </hgroup>
        <div class="entry-content">
            <p>{{ posts.note}}</p>
            
        </div>
    </div>
</div>

</div>          
        
{% endblock %}
        