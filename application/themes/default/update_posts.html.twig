{% extends '_layouts/admin_base.html.twig' %}
{% block content %}
<div>
            <hr>
            <ul class="breadcrumb">
                    <li>
                            <a href="{{ base_url() }}admin">Home</a> <span class="divider">/</span>
                    </li>
                    <li>
                            <a href="{{ base_url() }}admin/get/posts">Posts</a>
                    </li>
            </ul>
            <hr>
    </div>


<div class="row-fluid sortable">
        <div class="box span12">
                <div class="box-header" data-original-title>
                        <h2><i class="icon-edit"></i><span class="break"></span>Update A Posts</h2>                        
                </div>
                <div class="box-content">
                        <form class="form-horizontal" action="{{ site_url('admin/post/update_post')}}" method="POST">
                          <fieldset>
                                <div class="control-group">
                                  <label class="control-label" for="input-title">Title</label>
                                    <div class="controls">
                                      <input class="input-xlarge focused" id="input-title" name="title" type="text" value="{{ posts.title}}">
                                     
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="select-category">Select Category</label>
                                    <div class="controls">
                                        <select id="select-category" name="select-category[]" multiple data-rel="chosen">
                                            
                                            {% for category in posts.list_category %}
                                            
                                            {% if category.selected == 1 %}
                                            <option selected value='{{ category.id_category }}'>{{category.name}}</option>
                                            
                                            {% elseif category.selected == 0 %}
                                            
                                            <option value='{{ category.id_category }}'>{{category.name}}</option>
                                            
                                            {% endif %}
                                            
                                            {% endfor %}
                                            
                                            
                                          
                                            
                                        </select>
                                    </div>
                                </div>
                                <div class="control-group">
                                  <label class="control-label" for="textarea-note">Note</label>
					<div class="controls">
					      <textarea class="cleditor" id="textarea-note" name="note" rows="4" >{{posts.note}}</textarea>
					</div>				  
                                </div> 
                                <div class="control-group">
                                    
                                    <label class="control-label">Show this post</label>
                                    <div class="controls">
                                        
                                        {%if posts.status == 1 %}
                                        <label class="radio">    
                                            <input type="radio" name="show" id="radio-show-1" value="1" checked=""> show
                                        </label>
                                        <div style="clear:both"></div>
                                        <label class="radio">
                                            <input type="radio" name="show" id="radio-show-1" value="0" > hide
                                        </label
                                        {%elseif posts.status == 0 %}
                                        <label class="radio">    
                                            <input type="radio" name="show" id="radio-show-1" value="1"> show
                                        </label>
                                        <div style="clear:both"></div>
                                        <label class="radio">
                                            <input type="radio" name="show" id="radio-show-1" value="0"  checked="" > hide
                                        </label
                                        {%endif%}
                                           
                                       
                                    </div>
                                    <div class="controls">
                                      <input name="id_post" type="hidden" value="{{ posts.id_post}}">
                                     
                                    </div>
                                </div>
                                 
                                <div class="form-actions">
                                  <button type="submit" class="btn btn-primary">Save</button>
                                  <a class="btn" href="{{base_url()}}admin/get/posts/">Cancel</a>
                                </div>
                          </fieldset>
                        </form>			
                </div>
        </div><!--/span-->

</div><!--/row-->

			
{% endblock %}