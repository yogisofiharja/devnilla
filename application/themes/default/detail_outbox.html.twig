{% extends '_layouts/admin_base.html.twig' %}
{% block content %}
<hr>

<div class="row-fluid">
	<div class="box span12 noMargin" onTablet="span12" onDesktop="span12">
		<div class="box-header">
			<h2>Reply To {{message[0].name}}</h2>
		</div>
		<div class="box-content">
			<table class="table table-striped" style="width:30%;">
				<tr>
					<td style="width:40%;">Email</td>
					<td>{{message[0].email}}</td>
				</tr>
				<tr>
					<td>Sent at</td>
					<td>{{message[0].date_sent}}</td>
				</tr>
				<tr>
					<td>Subject</td>
					<td>{{message[0].subject}}</td>
				</tr>
				<tr>
					<td colspan="2">{{message[0].content}}</td>
				</tr>
			</table>
			<hr>			     
		</div>
	</div><!--/span-->
</div> 
<hr>       
{% endblock %}