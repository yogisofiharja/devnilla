{% extends '_layouts/admin_base.html.twig' %}

{% block content %}

    <div>
            <hr>
            <ul class="breadcrumb">
                    <li>
                            <a href="{{ base_url() }}admin">Home</a> <span class="divider">/</span>
                    </li>
                    <li>
                            <a href="{{ base_url() }}admin/get/posts">Post</a>
                    </li>
            </ul>
            <hr>
    </div>
    <div>	
		<a  class="btn btn-primary" href="{{ base_url()}}admin/get/tambah_posts">Add a New Posts</a>
                <hr>
    </div>
    
    <div class="row-fluid sortable">		
            <div class="box span12">
                    <div class="box-header" data-original-title>
                            <h2><i class="icon-user"></i><span class="break"></span>List of Posts</h2>                            
                    </div>
                    <div class="box-content">
                            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                              <thead>
                                      <tr>
                                              <th>Title</th>
                                              <th>Category</th>
                                              <th>Content</th>
                                              <th>Date Posted</th>
                                              <th>Action</th>
                                      </tr>
                              </thead>   
                              <tbody>
                                    {% for posts in list_posts %}
                                    <tr>
                                            <td>{{ posts.title}}</td>
                                            <td>
                                            {%for category in posts.category%}
                                                
                                                {{ category.name }}
                                                {% if not loop.last %}
                                                    , 
                                                {% endif %}
                                            {%endfor%}
                                            </td>
                                            <td>{{ posts.note}}</td>
                                            <td>{{ posts.date_post}}</td>
                                            <td class="center">
                                                    
                                                    <a class="btn btn-info" title="Edit this posts" href="{{base_url()}}admin/get/update_posts/{{posts.id_post}}">
                                                            <i class="icon-edit icon-white"></i>  
                                                    </a>
                                                    <a class="btn btn-danger" title="Delete this posts" href="{{base_url()}}admin/get/delete_posts/{{posts.id_post}}">
                                                            <i class="icon-trash icon-white"></i> 
                                                    </a>
                                            </td>
                                    </tr>
                                    {% endfor %}
                              </tbody>
                      </table>            
                    </div>
            </div><!--/span-->    
    </div><!--/row-->

<hr>	

{% endblock %}